<p id="notice"><%= notice %></p>

<h1>Recettes</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Utilisateur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recettes.each do |recette| %>
      <tr>
        <td><%= recette.titre %></td>
        <td><%= recette.description %></td>
        <td><%= recette.utilisateur_id %></td>
        <td><%= link_to 'afficher', recette %></td>
        <td><%= link_to 'modifier', edit_recette_path(recette) %></td>
        <td><%= link_to 'supprimer', recette, method: :delete, data: { confirm: 'êtes-vous sûr?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter une Recette', new_recette_path %>
